<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppUDP.Pages.UDP.CreateButtonPage">
    <ContentPage.Content>
        <StackLayout Margin="10" Spacing="10">
            <Entry Placeholder="IP" Text="{Binding Receive.IP}" />
            <Entry Placeholder="IP" Text="{Binding Receive.Port}" />
            <Entry Placeholder="Comando" Text="{Binding Comando.Send}" />
            <Entry Placeholder="Nome do Botão" Text="{Binding Comando.ButtonName}" />
            <Button Text="Testar Comando" TextColor="Yellow" BackgroundColor="Blue" Command="{Binding TestCommand}" />
            <Button Text="Criar" TextColor="White" BackgroundColor="Green" Command="{Binding CreateButtonCommand}" />
            <Button Text="Fechar" TextColor="White" BackgroundColor="Red" Command="{Binding CloseModalCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>